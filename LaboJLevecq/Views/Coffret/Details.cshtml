@{
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Démonstrations : @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Démonstrations d'utilisation de l'identifiant d'une liste de produits</h1>
        <h2 class="my-3">Vue détaillée de @Model.Titre</h2>
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.AfficheUrl" class="img-fluid img-thumbnail" alt="Affiche de @Model.Titre">
            </div>
            <div class="col-md-8">
                <p><strong>Prix :</strong> @Model.Prix.ToString("C")</p>
                <p><strong>Genre :</strong> @Model.Genre</p>
                <p><strong>Synopsis :</strong> @Model.Synopsis</p>
                <p><strong>Quantité disponible :</strong> @Model.Quantite</p>
                @if (Model.IsAvailable())
                {
                    <p class="text-success"><strong>En stock</strong></p>
                }
                else
                {
                    <p class="text-danger"><strong>Plus disponible...</strong></p>
                }
            </div>
        </div>
        <a class="btn btn-primary mt-2" asp-action="Index">Back to List</a>
    </div>
</body>
</html>
